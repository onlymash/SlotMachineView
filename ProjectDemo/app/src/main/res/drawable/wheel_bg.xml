<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#E44500"
                android:endColor="#E44500"
                android:startColor="#E44500" />

            <stroke
                android:width="0dp"
                android:color="#E44500" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="5dp"
        android:right="5dp"
        android:top="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:centerColor="#FFF8CD"
                android:endColor="#FFF8CD"
                android:startColor="#FFF8CD" />
        </shape>
    </item>
</layer-list>